.news
    height: 100vh
    background-image: url('/assets/i/news-background.png')
    background-position top center
    background-repeat no-repeat
    background-size cover
    @media screen and (max-width: 900px)
      height: 100vh


    &__title
      color #ffffff
      font-family "Open Sans"
      font-size 60px
      font-weight 400
      line-height 72px
      text-align: center
      margin-bottom: 8%
      @media screen and (max-width: 900px)
        font-size: 40px
        margin-bottom: 7%


    &__footer
      margin-top: 32%
      text-align: center
      @media screen and (max-width: 900px)
        margin-top: 5%

    &__button
      display: inline-block
      vertical-align: middle
      padding: 15px 60px 17px
      border: 2px solid #fff
      border-radius: 8px
      font-family: 'Open Sans'
      font-size: 22px
      line-height: 1.3
      color: #fff
      font-weight: 600
      text-align: center
      text-transform: uppercase
      cursor: pointer
      outline: 0
      @media screen and (max-width: 900px)
        padding: 10px 50px 12px
        font-size: 18px




.news-item
  float: left
  width: 30%
  margin-left: 3%
  text-decoration: none
  cursor: pointer
  color #ffffff
  font-family "Open Sans"
  font-size 22px
  font-weight 200
  line-height 30px
  @media screen and (max-width: 800px)
    float: none
    width: 80%
    margin-left: 0
    margin-bottom: 4%
    font-size 18px

.post-date

  &__date
    font-family "Open Sans"
    font-size 16px
    font-weight 200
    color: #9fa3a7
    line-height 26px
    display: inline-block
    margin-right: 4%
    margin-top: 2%
    @media screen and (max-width: 900px)
      font-size 12px
      margin-top: 0
      margin-right 3%
