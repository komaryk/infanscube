.preorder_button
	display inline-block
	padding 15px 60px
	border-radius 8px
	border 2px solid #ce2d6c
	background-color #ce2d6c
	color #fff
	font-size 22px
	font-weight 700
	letter-spacing 2.2px
	text-transform uppercase
	text-align center
	
	&:hover
		opacity 0.8
