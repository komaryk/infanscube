.intro-section
  height 100vh
  background-image url('i/intro.png')
  background-position top center
  background-repeat no-repeat
  background-size cover
  color #ffffff

  .intro-container
    width 1200px
    height 100vh
    margin 0 auto
    display flex
    align-items bottom
  .intro-info
    width 50%
    padding 45px
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    text-align center
    &__title
      font-weight 600
      font-size 40px
      padding-bottom 15px

    &__text
      font-weight 300
      font-size 20px

