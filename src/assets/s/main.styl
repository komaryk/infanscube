.cleafix
	clearfix()
	
.is-hidden 
	display: none
	
landscape_phones = 576px
tablets = 768px
desktops = 992px
large_desktops = 1200px

		
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600');


html
body
	font-family: 'Open Sans', Arial, Helvetica, sans-serif
	font-size: 16px
	line-height: 1.5

body
	background-color: #b4b2b8
	color: #fff
	
ul
	list-style-type: none
	padding-left: 0
	
img 
	max-width: 100%
	height: auto;
	
a
	color: inherit
	text-decoration: none
	transition: 0.2s

.container
	padding-right: 15px
	padding-left: 15px
	margin-right: auto
	margin-left: auto

	@media(min-width: landscape_phones)
		max-width: 540px
		
	@media(min-width: tablets)
		max-width: 720px
		
	@media(min-width: desktops)
		max-width: 960px
		
	@media(min-width: large_desktops)
		max-width: 1140px

